<!DOCTYPE html>
<html>
  <body>
    <h1 data-testid='setup_greeting'>
      <%= 'Let\'s set up the game.' %>
    </h1>
    <form action='/game_ready' method='GET'>
      <label>
        P1 Name
      </label>
      <input type='text' name='player_1_name' value='' data-testid='player_1_name' />
      <br/>

      <label>
        Play the Computer?
      </label>
      <input
        type='checkbox'
        name='computer'
        value=false
        data-testid='player_2_is_computer'
        onClick="document.getElementById('player_2_name').disabled=this.checked" />
      <br/>

      <label>
        P2 Name
      </label>
      <input type='text' id='player_2_name' name='player_2_name' data-testid='player_2_name' value='' disabled=true />
      <br/>

      <label>
        Board Size
      </label>
      <input type='text' name='board_size' data-testid='board_size' value=3 />
      <br/>

      <input type='submit' value='Submit' />
    </form>
  </body>
</html>